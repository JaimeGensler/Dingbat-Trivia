    height: 6vh;
    padding: 1vh;
    font-size: 3.5vh;
    border-radius: 10vh;
    border: 4px solid black;
  }
</style>

<!-- Page Content -->
<div id='main-display'>
  <div id='banner'>
    <h1>
      <span class='a'>D</span><span class='b'> i </span><span class='a'>n</span><span class='b'>g</span><span class='a'>B</span><span class='b'>a</span><span class='a '>t</span><span class='b'>!</span>
    </h1>
  </div>
  <div id ="join_form">
  <form class="" action="/rooms/join" method="post">
    <input type="text" name="player[room_id]" placeholder="Enter Room Number!" required>
    <input type="text" name="player[name]" placeholder="Enter Nickname!" maxlength="8" required>
    <button type="submit" id="join_button_size" name="button">Join Room!</button>
  </form>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {

    $('#join_form').submit(() => {
      $('#join_button_size').prop('disabled', true);
      $('#join_button_size').fadeOut();
    });

  });
</script>
