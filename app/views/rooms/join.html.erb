<style>
  /* colors = rbg(#cae7b9 #f3de8a #eb9486 #7e7f9a #97a7b3 % */
  body {
    animation: 5s yeep linear infinite;
    background-image:
    linear-gradient( #cae7b9, #f3de8a,#eb9486,#7e7f9a,#97a7b3);
  }
  main {
    width: 80%;
    margin: 0 auto;
  }
  #join_button_size {
    height: 10vh;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3.5vh;
    border-radius: 10vh;
    width: 45vw;
    border: 4px solid black;
    background-color: rgba(255, 255, 255, 0.8);
    color: black;
    margin: 1vh;
    line-height: 3.5vh;
  }
  #join_form {
    display:flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    margin-top: 19vh;
  }
  input[type="text"] {
    display:flex;
    align-items: center;
    margin: 1vh;
